<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/blue_bg"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="80dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_weight="0.18">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/check"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:buttonTint="#1d7795"
            android:scaleX="1.30"
            android:scaleY="1.30"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/midText"
            android:paddingBottom="20dp"
            android:textSize="20dp"
            android:paddingLeft="10dp"
            android:text="I agree to wysa\'s terms of use and privacy policy"
        />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="100px"
        android:id="@+id/belowText"
        android:textSize="30dp"
        android:gravity="center"
        android:text="Let\'s start"
        android:background="@drawable/bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="14dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:id="@+id/top"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:src="@drawable/wysa"
            android:scaleType="fitXY"
            android:layout_marginTop="80dp"
            android:layout_alignTop="@+id/titleText"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/titleText"
            android:text="I\'m here \n to Listen"
            android:textSize="36dp"
            android:padding="20dp"
            android:layout_marginTop="50dp"
            android:layout_alignParentTop="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/extra"
            android:text="\\"
            android:textSize="50dp"
            android:layout_marginStart="22dp"
            android:layout_alignBottom="@+id/titleText"
            android:layout_toEndOf="@+id/titleText" />

    </RelativeLayout>


</RelativeLayout>